/**app.wxss**/
@import "utils/weui.wxss";
@import 'template/progress/progress.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
  font-family: -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
}
.page{
    font-size: 16px;
}
.weui-cells{
    font-size: 16px;
}
.weui-cells::after{
    border-bottom: transparent;
}
.weui-cells::before{
    border-top: transparent;
}
.weui-cell{
    border: 1px solid lightgrey;
    border-radius: 5px;
    margin: 20rpx;
}
.weui-cell::before {
    border-top: transparent;
}
.weui-cells__title{
    margin-bottom: .5em;
    font-weight: bold;
    color:black;
}
button[type='primary']{
  background-color: #4A86E8;  
}
button[size="middle"] {
    display:inline-block;
    padding:0 1.34em;
}
.button-sp-area{
    clear: both;
    display: flex;
    justify-content: center;
    margin-top: 40rpx;
}
.button-sp-area > .double-btn {
    flex: 1;
}
.button-sp-area > .double-btn button {
    width: 90%;
    margin:0 5%;
}
